<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MindSight.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MindSight"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
       <ShellContent Title="Home"
                     Icon="home_icon.svg"
                     ContentTemplate="{DataTemplate local:MainPage}" />
       <ShellContent Title="Insights"
                     Icon="insights_icon.svg"
                     ContentTemplate="{DataTemplate local:InsightsPage}" />
        <ShellContent Title="Goal"
                     Icon="goal_icon.png"
                     ContentTemplate="{DataTemplate local:MainGoalPage}" />
        <ShellContent Title="Journal"
                     Icon="journal_icon.png"
                     ContentTemplate="{DataTemplate local:JournalPage}" />
    </TabBar>

</Shell>
